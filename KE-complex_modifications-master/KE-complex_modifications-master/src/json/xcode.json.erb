{
    "title": "Xcode",
    "rules": [
        {
            "description": "Xcode Visual Studio style (Run, Stop, Build, Step, Breakpoint)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("f5", ["shift"], []) %>,
                    "to": <%= to([["period", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["xcode"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f5", [], []) %>,
                    "to": <%= to([["r", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["xcode"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f7", [], []) %>,
                    "to": <%= to([["b", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["xcode"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("b", ["shift", "control"], []) %>,
                    "to": <%= to([["b", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["xcode"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f9", [], []) %>,
                    "to": <%= to([["7", ["left_shift", "left_option", "left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["xcode"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f10", [], []) %>,
                    "to": <%= to([["f6", []]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["xcode"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f11", [], []) %>,
                    "to": <%= to([["f7", []]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["xcode"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f11", ["shift"], []) %>,
                    "to": <%= to([["f8", []]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["xcode"]) %>
                    ]
                }
            ]
        }
    ]
}
