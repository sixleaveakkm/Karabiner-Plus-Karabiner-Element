{
    "title": "Disable alt+spacebar (nonbreaking space)",
    "rules": [
        {
            "description": "Change alt+spacebar to spacebar",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("spacebar", ["left_option"], ["left_shift","right_shift"]) %>,
                    "to": <%= to([["spacebar"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("spacebar", ["right_option"], ["left_shift","right_shift"]) %>,
                    "to": <%= to([["spacebar"]]) %>
                }
            ]
        }
    ]
}
